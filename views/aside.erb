<h4>Asked.io: Authors</h4>
<div class="wrapper">
<% Person.all.each do |person| %>
  <h3><%= person.name %></h3>
  <h4><%= person.title %></h4>
	<div class="about"><img class="avatar img-rounded" src="<%= person.avatar %>" width="70" height="70" alt="<%= person.name %>">
	<%= person.about %>
	<% if authorized? %>
		<div class="clearfix"></div>
		<a href="/profile/<%= person.name %>"><em class="fa fa-cog"></em></a> &nbsp; 
		<a href="/profile/delete/<%= person.name %>"><em class="fa fa-trash"></em></a> 
	<% end %>
	</div>
<% end %>
</div>