<%= erb :header %>
<article>
	<header>
		<h2><%= defined?(@post.slug) ? 'Edit' : 'Create' %> Post</h2>
	</header>
		<form method="post" role="form">
		  <div class="form-group">
			<label for="title">Title:</label>
			<input name="title" type="text" class="form-control" id="title" required <% if defined?(@post.title) %>value="<%= @post.title %>"<% end %>>
		  </div>
		  <div class="form-group">
			<label for="body">Body:</label>
			<textarea name="body" class="form-control" rows="10" id="body" required><%= defined?(@post.body)? @post.body : '' %></textarea>
		  </div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
</article>
<%= erb :footer %>
