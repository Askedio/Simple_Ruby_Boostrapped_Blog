<article>
  <header>
    <h2><%= defined?(@person.title) ? 'Edit' : 'Create' %> <%= @page_title %></h2>
  </header>
  <form method="post" role="form" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Name:</label>
      <input name="title" type="text" class="form-control" id="title" required value="<%= defined?(@person.title)? @person.title : '' %>">
    </div>
      <div class="form-group">
        <label for="roles">Roles</label>
        <select id="roles" multiple name="roles[]" class="form-control">
           <% Role.all.each do |role| %>
            <option value="<%= role.id %>" <%= defined?(@person.title) && @person.roles.include?(role) ? 'selected' : '' %>><%= role.title %></option>
          <% end %>
       </select>
      </div>
    <div class="form-group">
      <label for="body">Description</label>
      <textarea name="description" class="form-control" rows="10" id="body"><%= defined?(@person.description)? @person.description : ''  %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</article>
<%= erb :'admin/tinymce' %>
<% @footer = %Q{
  <link rel="stylesheet" property="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css">
  <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
  <script>
    $("#roles").select2({
      tags: true, placeholder :'Roles', width: '100%'
    });
  </script>
} %>