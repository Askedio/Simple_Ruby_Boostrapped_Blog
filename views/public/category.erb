<%= erb :header %>
<article>
	<% if @posts.length == 0 %>
		<header><h2>No results found :(</h2></header>
	<% else %>
		<header><h2>Categories</h2></header>
		<table class="table table-striped table-bordered">
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<% if authorized? %>
					<td align="right" width="80">
						<a href="/category/edit/<%= post.id %>"><em class="fa fa-cog"></em></a> &nbsp; 
						<a href="/category/delete/<%= post.id %>"><em class="fa fa-trash"></em></a> 
					</td>
				<% end %>
			</tr>
		<% end %>
		</table>
	<% end %>
	<%= will_paginate @posts, renderer: BootstrapPagination::Sinatra %>
</article>
<%= erb :footer %>